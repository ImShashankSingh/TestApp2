
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView  
        android:text="Token"
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/tokenTextView" />  

    <EditText  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/tagEditText" 
        android:hint="Tag to register"
        android:inputType="text" /> 

    <Button  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/registerForNotification"  
        android:text="Register for notification" />  
    
    <TextView  
        android:text="RegistrationId"
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/registrationIdTextView" />  


    <EditText  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/recieverTagEditText" 
        android:hint="Tag of reciever"
        android:inputType="text" /> 

    <Button  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/submitButton"  
        android:text="Send notification" />  
</LinearLayout>